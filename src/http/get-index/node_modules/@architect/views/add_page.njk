<!doctype html>
{% import "rrc.njk" as rrc %}
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>Add New Page</title>
        <meta name="description" content="a page with some links">
        <link rel="stylesheet" href="{{ styles }}">
        <link rel="stylesheet" href="https://rsms.me/inter/inter.css">
        {{rrc.FSM4S_css()}}
    </head>
    <body>
        {{rrc.FSM4S_controller()}}

        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="max-w-3xl mx-auto">
                <div class="mt-10 mb-10 md:flex md:items-center md:justify-between">
                    <h2 class="text-2xl font-bold leading-7 text-gray-900 sm:text-3xl sm:leading-9 sm:truncate">
            Add a new <span class="{{rrc.showA()}}"> Node</span>
                        <span class="{{rrc.showB()}}"> Page</span>
                        <span class="{{rrc.showC()}}"> Short URL</span>
                        <span class="{{rrc.showD()}}"> Branch</span>
                    </h2>
                </div>
                <div class="sm:col-span-2">
                    <div class="max-w-lg">
                        <div class="mt-4">
                            <p class="{{rrc.showA()}} text-sm leading-5 font-medium text-gray-700 mb-2">What type of node do you want to add?</p>
                            {{rrc.AtoB(text="Page",class=" inline-flex justify-center py-2 px-4 border border-transparent text-sm leading-5 font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-500 focus:outline-none focus:border-indigo-700 focus:shadow-outline-indigo active:bg-indigo-700 transition duration-150 ease-in-out")}}
                            {{rrc.AtoC(text="Short URL",class=" inline-flex justify-center py-2 px-4 border border-transparent text-sm leading-5 font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-500 focus:outline-none focus:border-indigo-700 focus:shadow-outline-indigo active:bg-indigo-700 transition duration-150 ease-in-out")}}
                            {{rrc.AtoD(text="Empty Branch",class=" inline-flex justify-center py-2 px-4 border border-transparent text-sm leading-5 font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-500 focus:outline-none focus:border-indigo-700 focus:shadow-outline-indigo active:bg-indigo-700 transition duration-150 ease-in-out")}}
                        </div>
                    </div>
                </div>

                <div>
                    <div>

                        <form method="post" action="/app/add">
                            <div class="mt-6 grid grid-cols-1 row-gap-6 col-gap-4 sm:grid-cols-6">
                                <div class="sm:col-span-4">
                                    <input name="basePath" value="{{basePath}}" type="text" class="hidden">
                                    <label for="path_part" class="block text-sm font-medium leading-5 text-gray-700">
                    Page Address
                  </label>
                                    <div  class="mt-1 flex rounded-md shadow-sm">
                                        <span class="inline-flex items-center px-3 rounded-l-md border border-r-0 border-gray-300 bg-gray-50 text-gray-500 sm:text-sm">
                                            {{basePath}}/
                    </span>
                                        <input id="path_part" placeholder="-branch name-" class="flex-1 form-input block w-full min-w-0 rounded-none rounded-r-md transition duration-150 ease-in-out sm:text-sm sm:leading-5" name="path_part">
                                    </div>
                                </div>
                                <div class="sm:col-span-3">
                                    <label for="permissions" class="block text-sm leading-5 font-medium text-gray-700">Share Permissions</label>
                                    <select id="permissions" name="permissions" class="mt-1 form-select block w-full pl-3 pr-10 py-2 text-base leading-6 border-gray-300 focus:outline-none focus:shadow-outline-blue focus:border-blue-300 sm:text-sm sm:leading-5">
                                        <option selected value="">none</option>
                                        {%for user in users %}
                                            <option value="{{user.key}}">{{user.google}}</option>
                                            {%endfor%}
                                        </select>
                                    </div>

                                    <div class="{{rrc.showC()}} sm:col-span-4">
                                        <label for="url_forward" class="block text-sm font-medium leading-5 text-gray-700">
                    URL forward
                    </label>
                                        <div class="mt-1 rounded-md shadow-sm">
                                            <input id="url_forward" type="url" name="url_forward" class="form-input block w-full transition duration-150 ease-in-out sm:text-sm sm:leading-5">
                                        </div>
                                    </div>
                                    <div class="{{rrc.showC()}} sm:col-span-4">
                                        <p class="text-sm leading-5 font-medium text-gray-700">What type of link do you want to create?</p>
                                        <div class="mt-4">
                                            <div class="flex items-center">
                                                <input id="perm_type" name="short_type" value="perminent" type="radio" class="form-radio h-4 w-4 text-indigo-600 transition duration-150 ease-in-out">
                                                <label for="perm_type" class="ml-3">
                                                    <span class="block text-sm leading-5 font-medium text-gray-700">Perminent</span>
                                                </label>
                                            </div>
                                            <div class="mt-4 flex items-center">
                                                <input id="temp_type" name="short_type" value="temporary" type="radio" class="form-radio h-4 w-4 text-indigo-600 transition duration-150 ease-in-out">
                                                <label for="temp_type" class="ml-3">
                                                    <span class="block text-sm leading-5 font-medium text-gray-700">Temporary</span>
                                                </label>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="{{rrc.showB()}} sm:col-span-4">
                                        <label for="title" class="block text-sm font-medium leading-5 text-gray-700">
                    Title
                  </label>
                                        <div class="mt-1 rounded-md shadow-sm">
                                            <input id="title" type="text" name="title" class="form-input block w-full transition duration-150 ease-in-out sm:text-sm sm:leading-5">
                                        </div>
                                    </div>

                                    <div class="{{rrc.showB()}} sm:col-span-4">
                                        <label for="sub_title" class="block text-sm font-medium leading-5 text-gray-700">
                    Subtitle
                  </label>
                                        <div class="mt-1 rounded-md shadow-sm">
                                            <input id="sub_title" name="sub_title" type="text" class="form-input block w-full transition duration-150 ease-in-out sm:text-sm sm:leading-5">
                                        </div>
                                    </div>
                                    <div class="{{rrc.showB()}} sm:col-span-6">
                                        <label for="description" class="block text-sm font-medium leading-5 text-gray-700">
                    Description paragraph
                  </label>
                                        <div class="mt-1 rounded-md shadow-sm">
                                            <textarea id="description" name="description" rows="3" class="form-textarea block w-full transition duration-150 ease-in-out sm:text-sm sm:leading-5"></textarea>
                                        </div>
                                        <p class="mt-2 text-sm text-gray-500">This paragraph will appear above the list of links.</p>
                                    </div>
                                    <div class="{{rrc.showB()}} sm:col-span-3">
                                        <label for="theme" class="block text-sm font-medium leading-5 text-gray-700">
                    Page Theme
                  </label>
                                        <div class="mt-1 rounded-md shadow-sm">
                                            <select id="theme" name="theme" class="form-select block w-full transition duration-150 ease-in-out sm:text-sm sm:leading-5">
                                                <option value="blue">Blue</option>
                                            </select>
                                        </div>
                                    </div>

                                </div>
                            </div>
                            <div class="{{rrc.showB()}}  mt-8 border-t border-gray-200 pt-8">

                                <div>
                                    <h3 class="text-lg leading-6 font-medium text-gray-900">
                  Buttons / Links
                </h3>
                                    <p class="mt-1 text-sm leading-5 text-gray-500">
                  These links will appear as a grid on the link page. 
                </p>
                                </div>
                                <div class="mt-6 grid grid-cols-1 row-gap-6 col-gap-4 sm:grid-cols-6">
                                    {% for i in range(1, 11) %}
                                        <div class="sm:col-span-2">
                                            <label for="buttontext{{i}}" class="block text-sm font-medium leading-5 text-gray-700">
                      Button
                      {{i}}
                      Text
                    </label>
                                            <div class="mt-1 rounded-md shadow-sm">
                                                <input id="buttontext{{i}}" name="button[{{i}}][text]" class="form-input block w-full transition duration-150 ease-in-out sm:text-sm sm:leading-5" >
                                            </div>
                                        </div>

                                        <div class="sm:col-span-4" >
                                            <label for="buttonlink{{i}}" class=" block text-sm font-medium leading-5 text-gray-700">
                      Link
                      {{i}}
                      to follow
                    </label>
                                            <div class="mt-1 rounded-md shadow-sm">
                                                <input id="buttonlink{{i}}" name="button[{{i}}][url]" class="form-input block w-full transition duration-150 ease-in-out sm:text-sm sm:leading-5" >
                                            </div>
                                        </div>

                                    {% endfor %}

                                </div>
                            </div>
                            <div class="mt-8 border-t border-gray-200 pt-5">
                                <div class="flex justify-end">
                                    <span class="inline-flex rounded-md shadow-sm">
                                        <button type="reset" class="py-2 px-4 border border-gray-300 rounded-md text-sm leading-5 font-medium text-gray-700 hover:text-gray-500 focus:outline-none focus:border-blue-300 focus:shadow-outline-blue active:bg-gray-50 active:text-gray-800 transition duration-150 ease-in-out">
                          Reset
                        </button>
                                    </span>
                                    <span class="ml-3 inline-flex rounded-md shadow-sm">
                                        <button type="submit" class="inline-flex justify-center py-2 px-4 border border-transparent text-sm leading-5 font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-500 focus:outline-none focus:border-indigo-700 focus:shadow-outline-indigo active:bg-indigo-700 transition duration-150 ease-in-out">
                          Save
                        </button>
                                    </span>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

        </body>
    </html>