<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{page.title}}</title>
    <meta name="description" content="a page with some links">
    <link rel="stylesheet" href="{{styles}}">
    <link rel="stylesheet" href="https://rsms.me/inter/inter.css">
  </head>
  <body>
    {%if page.colorTheme == "blue"%}
      <div class="relative bg-gray-50 overflow-hidden min-h-screen">

        <main class="mt-10 mx-auto max-w-screen-xl px-4 sm:mt-12 sm:px-6 md:mt-16 lg:mt-20 xl:mt-28">
          <div class="text-center">
            <h2 class="text-4xl tracking-tight leading-10 font-extrabold text-gray-900 sm:text-5xl sm:leading-none md:text-6xl">
              {{page.title}}
              <br class="xl:hidden">
              <span class="text-blue-700">{{page.subTitle}}</span>
            </h2>
            <p class="mt-3 max-w-md mx-auto text-base text-gray-500 sm:text-lg md:mt-5 md:text-xl md:max-w-3xl">
              {{page.description}}
            </p>
            <div class="mt-5 max-w-md sm:max-w-2xl mx-auto grid grid-cols-1 sm:grid-cols-2">
              {%for button in page.buttons%}
                <div class="my-3 mx-3 rounded-md shadow">
                  <a href="{{button.url}}" class=" w-full flex items-center justify-center px-8 py-3 border border-transparent text-lg leading-6 font-medium rounded-md text-white bg-blue-600 hover:bg-blue-500 focus:outline-none focus:border-blue-700 focus:shadow-outline-blue transition duration-150 ease-in-out md:py-4 md:text-lg md:px-10">
                    {{button.text}}
                  </a>
                </div>
                {%endfor%}
              </div>
            </div>
          </main>
        </div>
      </div>

      {%endif%}
    </body>
  </html>